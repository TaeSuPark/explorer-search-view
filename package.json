{
  "name": "folder-selector",
  "displayName": "Folder Selector",
  "description": "폴더를 쉽게 검색하고 고정할 수 있는 도구",
  "version": "0.0.1",
  "publisher": "TaeSuPark",
  "repository": {
    "type": "git",
    "url": "https://github.com/TaeSuPark/vsc-extension-folder-selector.git"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "folder",
    "explorer",
    "search",
    "pin",
    "unpin",
    "folder-selector",
    "bookmark"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "folder-selector.searchFolders",
        "title": "%command.searchFolders.title%",
        "icon": "$(search)"
      },
      {
        "command": "folder-selector.pinFolder",
        "title": "%command.pinFolder.title%",
        "icon": "$(pin)"
      },
      {
        "command": "folder-selector.unpinFolder",
        "title": "%command.unpinFolder.title%",
        "icon": "$(pinned)"
      },
      {
        "command": "folder-selector.moveUp",
        "title": "%command.moveUp.title%",
        "icon": "$(arrow-up)"
      },
      {
        "command": "folder-selector.moveDown",
        "title": "%command.moveDown.title%",
        "icon": "$(arrow-down)"
      },
      {
        "command": "folder-selector.pinFolderFromExplorer",
        "title": "%command.pinFolderFromExplorer.title%",
        "icon": "$(pin)"
      },
      {
        "command": "folder-selector.reset",
        "title": "%command.reset.title%",
        "icon": "$(clear-all)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "folder-selector",
          "title": "%viewsContainer.folderSelector.title%",
          "icon": "$(folder)"
        }
      ]
    },
    "views": {
      "folder-selector": [
        {
          "id": "folderSelectorView",
          "name": "%view.folderSelector.title%",
          "icon": "$(folder)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "folder-selector.reset",
          "when": "view == folderSelectorView",
          "group": "navigation@1"
        },
        {
          "command": "folder-selector.searchFolders",
          "when": "view == folderSelectorView",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "folder-selector.searchFolders",
          "title": "폴더 검색"
        }
      ],
      "view/item/context": [
        {
          "command": "folder-selector.pinFolder",
          "when": "view == folderSelectorView && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "folder-selector.unpinFolder",
          "when": "view == folderSelectorView && viewItem == folder-pinned",
          "group": "inline"
        },
        {
          "command": "folder-selector.moveUp",
          "when": "view == folderSelectorView && viewItem == folder-pinned",
          "group": "inline"
        },
        {
          "command": "folder-selector.moveDown",
          "when": "view == folderSelectorView && viewItem == folder-pinned",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "folder-selector.pinFolderFromExplorer",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
